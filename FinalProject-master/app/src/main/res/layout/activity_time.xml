<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridlayout1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:columnCount="1"
    android:rowCount="11"
    android:background="#FFFFFF"
    >

    <TableRow
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/miao_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="秒(s)"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/miao_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/fen_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="分钟(min)"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/fen_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/shi_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="小时(h)"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/shi_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/ri_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="日(d)"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/ri_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/zhou_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="周(w)"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/zhou_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >
        <TextView
            android:id="@+id/yue_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="月(m)"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/yue_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >
        <TextView
            android:id="@+id/nian_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="年(y)"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/nian_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="7"
        android:layout_rowWeight=".8"
        android:layout_column="0"
        android:layout_gravity="fill">

        <Button
            android:id="@+id/number7"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="7" />

        <Button
            android:id="@+id/number8"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="8" />

        <Button
            android:id="@+id/number9"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="9" />


    </TableRow>
    <TableRow
        android:layout_row="8"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >
        <Button
            android:id="@+id/number4"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="4"
            />

        <Button
            android:id="@+id/number5"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="5"
            />

        <Button
            android:id="@+id/number6"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="6"
            />


    </TableRow>
    <TableRow
        android:layout_row="9"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >
        <Button
            android:id="@+id/number1"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="1"
            />

        <Button
            android:id="@+id/number2"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="2"
            />

        <Button
            android:id="@+id/number3"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="3"
            />

    </TableRow>
    <TableRow
        android:layout_row="10"
        android:layout_rowWeight=".8"
        android:layout_column="0"
        android:layout_gravity="fill">

        <Button
            android:id="@+id/number0"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="0" />

        <Button
            android:id="@+id/dot"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="." />

        <Button
            android:id="@+id/clean_all"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/circle_rate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="C" />


    </TableRow>



</GridLayout>