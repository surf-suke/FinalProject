<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_operation"

        android:layout_width="38dp"
        android:layout_height="33dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="136dp"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/background_dark"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_i1"
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="90dp"
        android:gravity="left"
        android:text="i"
        android:textColor="@android:color/background_dark"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_plus2"

        android:layout_width="38dp"
        android:layout_height="33dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="192dp"
        android:gravity="center"
        android:text="+"
        android:textColor="@android:color/background_dark"
        android:textSize="24dp"
        android:textStyle="bold"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_i2"
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="192dp"
        android:gravity="left"
        android:text="i"
        android:textColor="@android:color/background_dark"
        android:textSize="24dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textView_rp1"
        android:layout_width="97dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:numeric="decimal"
        tools:ignore="Deprecated"/>

    <EditText
        android:id="@+id/textView_ip2"
        android:layout_width="97dp"
        android:layout_height="54dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="180dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:numeric="decimal"
        tools:ignore="Deprecated"/>

    <EditText
        android:id="@+id/textView_rp2"
        android:layout_width="97dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:text=""

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:numeric="decimal"
        tools:ignore="Deprecated" />

    <EditText
        android:id="@+id/textView_ip1"
        android:layout_width="97dp"
        android:layout_height="54dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="80dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:numeric="decimal"
        tools:ignore="Deprecated"/>

    <TextView
        android:id="@+id/textView_res"
        android:layout_width="404dp"
        android:layout_height="95dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="252dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_plus1"

        android:layout_width="38dp"
        android:layout_height="33dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="+"
        android:textColor="@android:color/background_dark"
        android:textSize="24dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="202dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="460dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/button_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" />

        <Button
            android:id="@+id/button_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="/" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>